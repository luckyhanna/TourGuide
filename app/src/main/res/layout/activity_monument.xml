<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blackOverlay"
    android:orientation="vertical"
    android:padding="@dimen/padding_10"
    tools:context="com.example.hannabotar.tourguideapp.activity.EventActivity">


    <ImageView
        android:id="@+id/monument_photo"
        android:layout_width="match_parent"
        android:layout_height="@dimen/imageDetailHeight"
        android:scaleType="centerCrop"
        tools:src="@drawable/default_img" />

    <TextView
        android:id="@+id/monument_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/padding_10"
        android:paddingBottom="@dimen/padding_10"
        android:textColor="@color/colorWhitish"
        android:textSize="@dimen/detailTitle"
        tools:text="Muzeul Taranului" />

    <ScrollView
        android:id="@+id/scroll_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusableInTouchMode="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/location_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/padding_5">

                <ImageView
                    android:id="@+id/location_icon"
                    android:layout_width="@dimen/iconWidth"
                    android:layout_height="@dimen/iconHeight"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/padding_10"
                    android:layout_marginRight="@dimen/padding_10"
                    android:scaleType="fitCenter"
                    android:scaleX="1"
                    android:scaleY="1"
                    android:src="@drawable/location2" />

                <TextView
                    android:id="@+id/monument_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/location_icon"
                    android:layout_toRightOf="@+id/location_icon"
                    android:autoLink="map"
                    android:textColor="@color/colorWhitish"
                    tools:text="Piata Victoriei nr. 34, Sector 1sssssssssssssssssssssssssss" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/phone_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/padding_5">

                <ImageView
                    android:id="@+id/phone_icon"
                    android:layout_width="@dimen/iconWidth"
                    android:layout_height="@dimen/iconHeight"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/padding_10"
                    android:layout_marginRight="@dimen/padding_10"
                    android:scaleType="fitCenter"
                    android:scaleX="1"
                    android:scaleY="1"
                    android:src="@drawable/phone2" />

                <TextView
                    android:id="@+id/monument_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/phone_icon"
                    android:layout_toRightOf="@+id/phone_icon"
                    android:autoLink="phone"
                    android:textColor="@color/colorWhitish"
                    android:textColorLink="@color/colorWhitish"
                    tools:text="021 222 222" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/mail_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/padding_5">

                <ImageView
                    android:id="@+id/mail_icon"
                    android:layout_width="@dimen/iconWidth"
                    android:layout_height="@dimen/iconHeight"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/padding_10"
                    android:layout_marginRight="@dimen/padding_10"
                    android:scaleType="fitCenter"
                    android:scaleX="1"
                    android:scaleY="1"
                    android:src="@drawable/email2" />

                <TextView
                    android:id="@+id/monument_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/mail_icon"
                    android:layout_toRightOf="@+id/mail_icon"
                    android:autoLink="email"
                    android:textColor="@color/colorWhitish"
                    android:textColorLink="@color/colorWhitish"
                    tools:text="mtr@email.com" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/web_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/padding_5">

                <ImageView
                    android:id="@+id/web_icon"
                    android:layout_width="@dimen/iconWidth"
                    android:layout_height="@dimen/iconHeight"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/padding_10"
                    android:layout_marginRight="@dimen/padding_10"
                    android:scaleType="fitCenter"
                    android:scaleX="1"
                    android:scaleY="1"
                    android:src="@drawable/home2" />

                <TextView
                    android:id="@+id/monument_website"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/web_icon"
                    android:layout_toRightOf="@+id/web_icon"
                    android:autoLink="web"
                    android:textColor="@color/colorWhitish"
                    android:textColorLink="@color/colorWhitish"
                    tools:text="www.mtr.ro" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/padding_10"
                android:text="@string/details"
                android:textColor="@color/colorWhitish"
                android:textSize="@dimen/detailsSize" />

            <ScrollView
                android:id="@+id/scroll_description"
                android:layout_width="match_parent"
                android:layout_height="@dimen/scrollDescriptionHeight"
                android:padding="@dimen/padding_10">

                <TextView
                    android:id="@+id/monument_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorWhitish"
                    tools:text="blabl ablabl \nl ablabl ablabl ab lablabla ablabl \nl ablabl ablabl ab lablabla ablabl \nl ablabl ablabl ab lablabla ablabl \nl ablabl ablabl ab lablabla ablabl \nl ablabl ablabl ab lablabla ablabl \nl ablabl ablabl ab lablabla" />
            </ScrollView>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
